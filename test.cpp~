#include "aes256.h"
#include <iostream>
#include <string>
#include <locale>
#include <stdlib.h>     /* srand, rand */
#include <time.h>       /* time */
using namespace std;


int main()
{
	//setlocale(LC_ALL, "polish");
	srand (time(NULL));
	char tab[118] = "ABCDEFGHIJKLMNOPQRSTUWXYZĄĘŁÓŹŻŃabcdefghijklmnopqrstuwxyząęłóżźń0123456789~!@#$%^&*()-=+_';/.,[]{}\"<>?:";
	cout<<"ROZPOCZĘCIE TESTÓW\n";
	
	string AES_KEY = "000102030405060708090a0b0c0d0e0f";
	long error = 0;
	for(unsigned long long i=0;i<10000000000000000000000000;i++){
	//losuje długość ciągu
	int length = rand();
	string input;
	for(int j=0;j<length;j++){
			input+=tab[rand()%118];
		}
	if(input==sAes256Decrypt(sAes256Encrypt(input, AES_KEY), AES_KEY))
		cout<<"test "<<i<<" OK\t";
	else
		error++;
	}
	cout<<"\nKONIEC TESTÓW\n"<<error<<" błędów";


    return 0;
}
